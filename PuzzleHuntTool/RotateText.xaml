<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuzzleHuntTool.RotateText"
             Title="RotateText">
    <VerticalStackLayout
        x:Name="VSL"
        Padding="30,0"
        Spacing="25">
        <Label 
            Text="Text Rotation Tool"
            FontSize="30"
            TextColor="WhiteSmoke"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="textEntry"
            BackgroundColor="WhiteSmoke"
            WidthRequest="500"
            TextColor="Black"
            TextChanged="textEntry_TextChanged"
            />
        <Picker
            x:Name="rotPicker"
            Title = "Select rotation amount"
            WidthRequest = "500"
            SelectedIndexChanged="rotPicker_SelectedIndexChanged"
            >
        </Picker>
        <Label 
            x:Name="rotatedText"
            Text=""
            FontSize="20"
            TextColor="WhiteSmoke"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>